@model List<PublisherViewModel>
@{
    int i = 1;
}

<a class="btn btn-success" role="button" asp-controller="Publisher" asp-action="Add">Yeni</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Adresi</th>
            <th scope="col">ŞehirAdı</th>
            <th scope="col">Durumu</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (PublisherViewModel publisher in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@publisher.Name</td>
                    <td>@publisher.Adress</td>
                    <td>@publisher.CityName</td>
                    <td>@publisher.Status</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Yayınevi işlemleri Düzenle,Detay,Sil">
                            <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@publisher.Id" role="button" class="btn btn-warning" aria-label="Şehir Düzenle">Düzenle</a>
                            <a asp-controller="Publisher" asp-action="Detail" asp-route-id="@publisher.Id" role="button" class="btn btn-primary" aria-label="Şehir Detay">Detay</a>
                            <a asp-controller="Publisher" asp-action="Remove" asp-route-id="@publisher.Id" role="button" class="btn btn-danger" aria-label="Şehir Sil">Sil</a>
                        </div>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <p class="text-muted text-center">Liste boş</p>
                </td>
            </tr>
        }
    </tbody>
</table>

